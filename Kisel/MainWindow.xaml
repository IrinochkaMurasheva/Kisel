<Window x:Class="Kisel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kisel"
        mc:Ignorable="d"
        
        WindowState="Maximized"
        MinHeight="300"
        MinWidth="400"
        MaxHeight="1920"
        MaxWidth="1080"
        Background="HotPink"
        
        Title="Что то странное" Height="500" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="tb_info"
                Text="Ваше число" FontSize="15"
            Margin="0 0 0 20"/>
            <Button Click="Button_Click" Content="Рандомное число от 1 до 10" Margin="0 0 0 10" Background="Gray" Width="360" Height="50"/>
            
        </StackPanel>

    </Grid>
</Window>
